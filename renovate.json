{
  "$schema": "http://json.schemastore.org/renovate",
  "extends": ["config:base", ":semanticCommitScopeDisabled"],
  "baseBranches": ["main"],
  "rebaseWhen": "behind-base-branch",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "pr",
    "commitMessageAction": "ðŸ“¦ Lock file maintenance"
  },
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "semanticCommitType": "build"
    },
    {
      "matchPackagePatterns": ["^@nx", "@angular\\/cli"],
      "schedule": ["before 3am"]
    }
  ],
  "rangeStrategy": "update-lockfile",
  "commitMessageAction": "ðŸ“¦",
  "schedule": ["before 3am on the first day of the month"]
}
